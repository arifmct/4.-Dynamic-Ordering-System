    <asp:SqlDataSource ID="SqlDataSource1" runat="server" ConflictDetection="CompareAllValues" ConnectionString="<%$ ConnectionStrings:MyCon %>" DeleteCommand="DELETE FROM [rTable] WHERE [Id] = @original_Id AND (([Name] = @original_Name) OR ([Name] IS NULL AND @original_Name IS NULL)) AND (([Description] = @original_Description) OR ([Description] IS NULL AND @original_Description IS NULL)) AND (([Capacity] = @original_Capacity) OR ([Capacity] IS NULL AND @original_Capacity IS NULL))" InsertCommand="INSERT INTO [rTable] ([Name], [Description], [Capacity]) VALUES (@Name, @Description, @Capacity)" OldValuesParameterFormatString="original_{0}" SelectCommand="SELECT * FROM [rTable]" UpdateCommand="UPDATE [rTable] SET [Name] = @Name, [Description] = @Description, [Capacity] = @Capacity WHERE [Id] = @original_Id AND (([Name] = @original_Name) OR ([Name] IS NULL AND @original_Name IS NULL)) AND (([Description] = @original_Description) OR ([Description] IS NULL AND @original_Description IS NULL)) AND (([Capacity] = @original_Capacity) OR ([Capacity] IS NULL AND @original_Capacity IS NULL))">
